<Window x:Class="Randomizer.App.TrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tracker — SMZ3 Cas' Randomizer"
        Height="250"
        Width="450"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Closed="Window_Closed"
        SizeToContent="WidthAndHeight"
        Background="#212121">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Border x:Name="GoModeBorder"
            Grid.Row="0"
            Padding="7"
            BorderThickness="4"
            BorderBrush="Transparent">
      <Grid x:Name="TrackerGrid"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Border>

    <StatusBar x:Name="TrackerStatusBar"
               Grid.Row="1">
      <StatusBarItem x:Name="StatusBarTimer"
                     Content="00:00"
                     HorizontalAlignment="Left" />
      <StatusBarItem x:Name="StatusBarConfidence"
                     Content="0.00%"
                     ToolTip="Confidence of last recognized voice command"
                     HorizontalAlignment="Left" />
    </StatusBar>
  </Grid>
</Window>
